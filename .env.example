# Ambiente da aplicação
DJANGO_ENV=prod

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=app.squadra.dev.br,app.squadra.corp,localhost

# Chave secreta do Django (gere uma forte em produção)
SECRET_KEY=changeme-secret-key

# Banco de dados (exemplo para uso com PostgreSQL no Neon ou outro)
DATABASE_URL=postgres://username:password@host:port/dbname

# Outras variáveis que você pode querer (exemplo):
# TIMEZONE=America/Sao_Paulo
# DEBUG=False

# Email settings (se usar email em produção):
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password